{
  "name": "wakuwaku",
  "author": "regaliastar",
  "version": "1.0.0",
  "description": "A mini galgame engine",
  "repository": "https://github.com/regaliastar/wakuwaku",
  "scripts": {
    "build": "webpack --config scripts/webpack.config.js --mode development && webpack --config scripts/webpack.config.render.js --mode development",
    "watch": "webpack --watch --config scripts/webpack.config.render.js --mode development",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "fix": "eslint --fix src",
    "start": "npm run build && electron ./dist/main.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "css-loader": "^6.7.1",
    "electron": "^21.0.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "node-sass": "^7.0.3",
    "prettier": "^2.7.1",
    "sass-loader": "^13.1.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
