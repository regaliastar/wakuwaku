{
  "name": "wakuwaku",
  "author": "regaliastar",
  "version": "1.0.0",
  "description": "A mini galgame engine",
  "repository": "https://github.com/regaliastar/wakuwaku",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.less": "stylelint --fix --custom-formatter=node_modules/stylelint-formatter-pretty"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^21.0.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {}
}
