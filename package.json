{
  "name": "wakuwaku",
  "author": "regaliastar",
  "version": "1.0.0",
  "description": "A mini galgame engine",
  "repository": "https://github.com/regaliastar/wakuwaku",
  "scripts": {
    "build": "webpack --config scripts/webpack.config.electron.js --mode development && webpack --config scripts/webpack.config.render.js --mode development",
    "watch": "webpack --watch --config scripts/webpack.config.render.js --mode development",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "stylelint": "stylelint 'src/**/*.less' --fix --custom-formatter=node_modules/stylelint-formatter-pretty",
    "fix": "eslint --fix src",
    "start": "npm run build && electron ./dist/main.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.less": "stylelint --fix --custom-formatter=node_modules/stylelint-formatter-pretty"
  },
  "devDependencies": {
    "@loadable/component": "^5.15.2",
    "@types/glob": "^8.0.0",
    "@types/loadable__component": "^5.13.4",
    "@types/lodash": "^4.14.186",
    "@types/react-typist": "^2.0.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "css-loader": "^6.7.1",
    "electron": "^21.0.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "lint-staged": "^13.0.3",
    "postcss-less": "^6.0.0",
    "prettier": "^2.7.1",
    "react-use": "^17.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-formatter-pretty": "^3.1.0",
    "stylelint-prettier": "^2.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "antd": "^4.23.6",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "react-typist-component": "^1.0.5",
    "recoil": "^0.7.6",
    "uuid": "^9.0.0"
  }
}
